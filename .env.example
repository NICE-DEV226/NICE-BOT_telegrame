# NICE-BOT Environment Variables
# Copy this file to .env and fill in your actual values

# Telegram Bot Token (required)
# Get from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# LibreTranslate API URL (free service)
LIBRETRANSLATE_URL=https://libretranslate.com

# PrinceTech Weather API Key (free service)
# Get from https://api.princetechn.com/
PRINCETECHN_API_KEY=prince

# TMDB API Key (free with registration)
# Get from https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Mediastack API Key (free tier available)
# Get from https://mediastack.com/
MEDIASTACK_API_KEY=your_mediastack_api_key_here

# Nexoracle API Key (PDF generation) - DEPRECATED
# PDF generation now uses local FPDF library (100% Python, no API needed)
# NEXORACLE_API_KEY=your_nexoracle_api_key_here

# Admin User ID (optional)
# Your Telegram user ID for admin commands like /logs
ADMIN_USER_ID=your_telegram_user_id

# Port for the web server (Render will set this automatically)
PORT=8000
